<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor para los Fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp" />

    <!-- Barra de navegaciÃ³n inferior fija -->
    <include
        android:id="@+id/layout_bottom_nav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom" />

    <!-- FAB Central - ADELANTE DE TODO -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#9C27B0"
        app:fabSize="normal"
        app:maxImageSize="24dp"
        app:elevation="50dp"
        app:pressedTranslationZ="54dp"
        app:borderWidth="0dp"
        app:rippleColor="@android:color/white"
        android:contentDescription="@string/fab_plus"
        android:clickable="true"
        android:focusable="true" />



</FrameLayout>

