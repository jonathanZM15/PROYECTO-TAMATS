<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Card contenedor con elevaciÃ³n -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/bottom_nav_bg">

        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Explorar -->
            <LinearLayout
                android:id="@+id/navExplorar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivNavExplore"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_explore"
                    android:contentDescription="@string/nav_explore"
                    app:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/tvNavExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_explore"
                    android:textSize="11sp"
                    android:textColor="@color/bottom_nav_inactive"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Matches -->
            <LinearLayout
                android:id="@+id/navMatches"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivNavMatches"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_favorite"
                    android:contentDescription="@string/nav_matches"
                    app:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/tvNavMatches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_matches"
                    android:textSize="11sp"
                    android:textColor="@color/bottom_nav_inactive"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Hueco central para el FAB -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3" />

            <!-- Chats -->
            <LinearLayout
                android:id="@+id/navChats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivNavChats"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_chat"
                    android:contentDescription="@string/nav_chats"
                    app:tint="@color/bottom_nav_inactive" />

                <TextView
                    android:id="@+id/tvNavChats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_chats"
                    android:textSize="11sp"
                    android:textColor="@color/bottom_nav_inactive"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Perfil -->
            <LinearLayout
                android:id="@+id/navPerfil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivNavPerfil"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_person"
                    android:contentDescription="@string/nav_profile"
                    app:tint="@color/bottom_nav_active" />

                <TextView
                    android:id="@+id/tvNavPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_profile"
                    android:textSize="11sp"
                    android:textColor="@color/bottom_nav_active"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>


