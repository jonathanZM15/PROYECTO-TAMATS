<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR PERFIL"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Contenedor de foto de perfil -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil" />

            <!-- Botón para cambiar foto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/button_rounded_red"
                    android:scaleType="centerInside"
                    android:contentDescription="Cambiar foto"
                    android:padding="8dp" />
            </LinearLayout>

        </FrameLayout>

        <!-- Card con formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre de usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Ingresa tu nombre"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Edad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etProfileAge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Ingresa tu edad"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Ciudad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etProfileCity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Ingresa tu ciudad"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción (Opcional)"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etProfileDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Cuéntanos sobre ti..."
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección de Intereses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intereses"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/interestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Row 1: Deporte, Literatura, Música -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/cbDeporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Deporte"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbLiteratura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Literatura"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbMusica"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Música"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Row 2: Viajar, Fotografía, Arte -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/cbViajar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Viajar"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbFotografia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fotografía"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbArte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Arte"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Row 3: Cine, Cocina, Yoga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/cbCine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cine"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbCocina"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cocina"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbYoga"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yoga"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Row 4: Tecnología, Lectura, Moda -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp">

                    <CheckBox
                        android:id="@+id/cbTecnologia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tecnología"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbLectura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lectura"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cbModa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Moda"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Guardar Perfil"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@android:color/white"
            android:textColor="@color/purple_700" />

    </LinearLayout>

</ScrollView>
