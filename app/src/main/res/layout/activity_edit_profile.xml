<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/splash_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:letterSpacing="0.05" />

        <!-- Contenedor de la foto de perfil -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:contentDescription="@string/photo_description"
                android:background="@drawable/circle_background"
                android:elevation="8dp" />

            <ImageButton
                android:id="@+id/btnChangePhoto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/button_rounded_red"
                android:scaleType="centerInside"
                android:contentDescription="@string/change_photo"
                android:padding="10dp"
                android:elevation="10dp" />

        </FrameLayout>

        <!-- Card con el formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_name"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="18dp"
                    android:autofillHints="name"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/hint_name"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <!-- Edad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_age"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etProfileAge"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_age"
                    android:autofillHints="birthdate"
                    android:inputType="number"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="18dp" />

                <!-- Ciudad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_city"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etProfileCity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_city"
                    android:autofillHints="postalLocality"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="18dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_description"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etProfileDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="110dp"
                    android:hint="@string/hint_description"
                    android:autofillHints=""
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp"
                    android:scrollbars="vertical"
                    android:maxHeight="300dp" />

                <!-- Contador de palabras -->
                <TextView
                    android:id="@+id/tvWordCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/word_count_default"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="end"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección de Intereses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_interests"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="4dp"
            android:letterSpacing="0.03" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/interestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fila 1: Deporte, Literatura, Música -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/cbDeporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_deporte"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbLiteratura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_literatura"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbMusica"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_musica"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </LinearLayout>

                <!-- Fila 2: Viajar, Fotografía, Arte -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/cbViajar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_viajar"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbFotografia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_fotografia"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbArte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_arte"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </LinearLayout>

                <!-- Fila 3: Cine, Cocina, Yoga -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/cbCine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_cine"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbCocina"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_cocina"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbYoga"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_yoga"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </LinearLayout>

                <!-- Fila 4: Tecnología, Lectura, Moda -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbTecnologia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_tecnologia"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbLectura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_lectura"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <CheckBox
                        android:id="@+id/cbModa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interest_moda"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:text="@string/save_profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:backgroundTint="@android:color/white"
            android:textColor="@color/purple_700"
            app:strokeColor="@color/purple_700"
            app:strokeWidth="2dp"
            android:elevation="6dp" />

    </LinearLayout>

</ScrollView>

