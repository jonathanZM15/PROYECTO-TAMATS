<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_gradient_background">

    <!--
        Título centrado grande para mantener consistencia visual con otras pantallas
        (ej. Create Post). Se usa un tamaño mayor y centrado en la parte superior.
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_title"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="12dp" />

    <ScrollView
        android:id="@+id/scrollEditProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contenedor de foto de perfil centrado -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <!-- Avatar con fondo circular para consistencia visual -->
                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/photo_description"
                    android:background="@drawable/circle_background" />

                <!-- Botón para cambiar foto (pequeño) anclado abajo a la derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp">

                    <ImageButton
                        android:id="@+id/btnChangePhoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/button_rounded_red"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/change_photo"
                        android:padding="8dp" />
                </LinearLayout>

            </FrameLayout>

            <!-- Card con formulario (mantiene estilo de tarjetas con esquinas y sombra) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nombre de usuario -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_name"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_name"
                        android:autofillHints="name"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />

                    <!-- Edad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_age"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etProfileAge"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_age"
                        android:autofillHints="birthdate"
                        android:inputType="number"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />

                    <!-- Ciudad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_city"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etProfileCity"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/hint_city"
                        android:autofillHints="postalLocality"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_description"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etProfileDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:hint="@string/hint_description"
                        android:autofillHints=""
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"
                        android:scrollbars="vertical"
                        android:maxHeight="300dp" />

                    <!-- Contador de palabras -->
                    <TextView
                        android:id="@+id/tvWordCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/30 palabras"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="end"
                        android:paddingEnd="12dp"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección de Intereses con su Card (igual que otras pantallas) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_interests"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/interestsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Row 1: Deporte, Literatura, Música -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <CheckBox
                            android:id="@+id/cbDeporte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_deporte"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbLiteratura"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_literatura"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbMusica"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_musica"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Row 2: Viajar, Fotografía, Arte -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <CheckBox
                            android:id="@+id/cbViajar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_viajar"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbFotografia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_fotografia"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbArte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_arte"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Row 3: Cine, Cocina, Yoga -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <CheckBox
                            android:id="@+id/cbCine"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_cine"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbCocina"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_cocina"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbYoga"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_yoga"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Row 4: Tecnología, Lectura, Moda -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="0dp">

                        <CheckBox
                            android:id="@+id/cbTecnologia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_tecnologia"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbLectura"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_lectura"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbModa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/interest_moda"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Botón Guardar Perfil en la parte inferior -->
    <LinearLayout
        android:id="@+id/saveButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:elevation="12dp"
        android:translationZ="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/save_profile"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:backgroundTint="@android:color/white"
            android:textColor="@color/purple_700" />

    </LinearLayout>


</LinearLayout>
