<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_explore_gradient">

    <!-- Header con bot贸n atr谩s -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBackFromKnow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:contentDescription="Atr谩s"
            app:tint="@color/tamats_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Conocer"
            android:textAllCaps="true"
            android:textColor="@color/tamats_pink"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Contenido scrollable del perfil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Foto de perfil grande -->
            <ImageView
                android:id="@+id/ivUserPhotoKnow"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Foto de perfil"
                android:layout_margin="16dp" />

            <!-- Informaci贸n b谩sica -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre -->
                <TextView
                    android:id="@+id/tvUserNameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Usuario"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <!-- Edad -->
                <TextView
                    android:id="@+id/tvAgeProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 a帽os"
                    android:textSize="14sp"
                    android:textColor="@color/tamats_pink"
                    android:layout_marginBottom="4dp" />

                <!-- Fecha de nacimiento -->
                <TextView
                    android:id="@+id/tvBirthDateProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nacimiento: 01/01/1999"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:layout_marginBottom="8dp" />

                <!-- Ciudad -->
                <TextView
                    android:id="@+id/tvCityProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Ciudad"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Descripci贸n -->
                <TextView
                    android:id="@+id/tvDescriptionProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripci贸n del usuario"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4DFFFFFF"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Intereses -->
            <LinearLayout
                android:id="@+id/llInterestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4DFFFFFF"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp" />

            <!-- Publicaciones -->
            <LinearLayout
                android:id="@+id/llPublicationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Nueva secci贸n: Historias -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4DFFFFFF"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/llStoriesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tvStoriesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historias"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/tamats_pink"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUserStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvNoStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este usuario no tiene historias"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
