<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_marginBottom="16dp"
    android:background="#1a1a2e"
    android:elevation="4dp">

    <!-- Header con foto y nombre del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#0f0f1e">

        <ImageView
            android:id="@+id/ivStoryUserPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Foto usuario" />

        <TextView
            android:id="@+id/tvStoryUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Usuario"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Contenedor de imágenes con ViewPager2 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpStoryImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Indicador de puntos para múltiples imágenes (superpuesto en la parte inferior) -->
        <LinearLayout
            android:id="@+id/vpStoryDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Texto de la historia (si aplica) -->
    <TextView
        android:id="@+id/tvStoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#40000000"
        android:visibility="gone" />

</LinearLayout>
