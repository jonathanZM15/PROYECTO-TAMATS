<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <!-- Header con degradado morado/rosa -->
    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/splash_gradient_background"
        android:padding="24dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“œ TÃ©rminos y Condiciones"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TAMATS"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:letterSpacing="0.15" />

    </LinearLayout>

    <!-- Contenedor con ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        app:layout_constraintBottom_toTopOf="@id/cvBottomButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:id="@+id/tvTermsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando tÃ©rminos..."
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.7"
                    android:padding="24dp"
                    android:fontFamily="sans-serif"
                    android:textIsSelectable="true"
                    android:letterSpacing="0.01" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- BotÃ³n de regreso con sombra -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBottomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/llFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReturnFromTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGRESAR"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#6A1B9A"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:letterSpacing="0.05"
                app:cornerRadius="28dp"
                app:elevation="6dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Footer con degradado y copyright -->
    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/splash_gradient_background"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 TAMATS"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Todos los derechos reservados"
            android:textColor="#E0E0E0"
            android:textSize="11sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

