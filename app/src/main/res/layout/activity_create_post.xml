<?xml version="1.0" encoding="utf-8"?>
<!-- Convertimos la raíz en FrameLayout para poder superponer el botón PUBLICAR y la barra inferior -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background">

    <!-- Contenedor principal con padding superior e inferior -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="160dp"> <!-- espacio extra para bottom nav y botón -->

        <!-- Título centrado similar a otras pantallas -->
        <TextView
            android:id="@+id/tvCreateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_post_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Contenedor central con padding y sombra similar a tarjeta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header usuario -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/ivUserAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/avatar_cd"
                            android:background="@drawable/circle_background" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_name_demo"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Campo tipo tarjeta para el texto de la publicación -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/etPostText"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="@string/create_post_hint"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:padding="16dp"
                            android:background="@android:color/transparent"
                            android:maxLength="1000"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:autofillHints="" />

                    </androidx.cardview.widget.CardView>

                    <!-- Grid de fotos dentro de una Card para fondo morado claro y esquinas redondeadas -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#F0EAFB">

                        <!-- Usamos FrameLayout para superponer el RecyclerView y el botón centrado -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPhotos"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:overScrollMode="never" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Spacer para dejar espacio visual encima del botón PUBLICAR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

    <!-- Incluimos la barra de navegación inferior reutilizable -->
    <include
        android:id="@+id/includeBottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:translationZ="8dp" />

    <!-- Botón grande PUBLICAR como overlay, centrado horizontal y con margen bottom para quedar encima de la barra -->
    <!-- dejar espacio para la barra inferior -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPublish"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:text="@string/publish"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@null"
        app:strokeWidth="0dp"
        app:cornerRadius="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:iconGravity="textStart"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_publish_gradient"
        android:elevation="12dp"
        android:translationZ="12dp" />

</FrameLayout>
