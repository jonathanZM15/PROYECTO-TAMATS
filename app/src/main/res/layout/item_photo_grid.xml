<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_item">

        <ImageView
            android:id="@+id/ivGridPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/photo_description" />

        <!-- Botón para slots vacíos: icono de cámara + texto 'Añadir Foto' -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/add_photo"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textTop"
            app:iconPadding="6dp"
            app:cornerRadius="12dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:backgroundTint="@color/slot_background"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/btnRemovePhoto"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/remove_photo" />

</FrameLayout>
