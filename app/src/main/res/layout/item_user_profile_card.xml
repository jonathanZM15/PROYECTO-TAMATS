<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor de la foto LIMPIA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="480dp">

            <!-- Foto de perfil COMPLETA sin nada encima -->
            <ImageView
                android:id="@+id/ivUserProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Foto de perfil del usuario" />

            <!-- Badge de edad en esquina superior derecha -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E91E63">

                <TextView
                    android:id="@+id/tvUserAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- Informaci贸n del usuario ABAJO de la foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="@android:color/white">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#212121"
                android:letterSpacing="0.01"
                android:layout_marginBottom="6dp" />

            <!-- Ciudad con emoji -->
            <TextView
                android:id="@+id/tvUserCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ciudad"
                android:textSize="15sp"
                android:textColor="#757575"
                android:layout_marginBottom="14dp" />

            <!-- Descripci贸n en card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/tvUserDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripci贸n del usuario..."
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="14dp"
                    android:lineSpacingMultiplier="1.3" />

            </androidx.cardview.widget.CardView>

            <!-- Botones de acci贸n ABAJO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp">

                <!-- Bot贸n Rechazar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginEnd="18dp">

                    <ImageButton
                        android:id="@+id/btnReject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_close"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:contentDescription="No me gusta"
                        android:padding="18dp"
                        app:tint="#EF5350" />

                </androidx.cardview.widget.CardView>

                <!-- Bot贸n Me Gusta (m谩s grande) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    app:cardCornerRadius="37dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#E91E63"
                    android:layout_marginEnd="18dp">

                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_heart"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:contentDescription="Me gusta"
                        android:padding="20dp"
                        app:tint="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <!-- Bot贸n Favorito -->
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/white">

                    <ImageButton
                        android:id="@+id/btnFavorite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star"
                        android:background="@android:color/transparent"
                        android:scaleType="centerInside"
                        android:contentDescription="Favorito"
                        android:padding="18dp"
                        app:tint="#FFB300" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

