<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo / Icono -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_lock_reset"
            android:contentDescription="Cambiar contraseÃ±a"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:tint="#FFFFFF"
            android:background="@drawable/circle_background"
            android:padding="20dp" />

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Nueva ContraseÃ±a"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- DescripciÃ³n -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea una contraseÃ±a segura para tu cuenta"
            android:textSize="15sp"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Card blanca con el formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email (solo lectura) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuenta"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvEmailDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/rounded_input_readonly"
                    android:layout_marginBottom="20dp" />

                <!-- Nueva contraseÃ±a -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#9C27B0"
                    app:hintTextColor="#9C27B0"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#9C27B0"
                    app:helperText="MÃ­nimo 8 caracteres"
                    app:helperTextTextColor="#757575">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nueva ContraseÃ±a"
                        android:inputType="textPassword"
                        android:autofillHints="password"
                        android:padding="14dp"
                        android:textSize="15sp"
                        android:textColor="#212121" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmar contraseÃ±a -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#9C27B0"
                    app:hintTextColor="#9C27B0"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#9C27B0">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmar ContraseÃ±a"
                        android:inputType="textPassword"
                        android:autofillHints="password"
                        android:padding="14dp"
                        android:textSize="15sp"
                        android:textColor="#212121" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Requisitos de contraseÃ±a -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background_light"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La contraseÃ±a debe contener:"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvReqLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ MÃ­nimo 8 caracteres"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawableStart="@drawable/ic_circle_outline"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/tvReqUppercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Al menos una mayÃºscula"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawableStart="@drawable/ic_circle_outline"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/tvReqNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Al menos un nÃºmero"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:drawableStart="@drawable/ic_circle_outline"
                        android:drawablePadding="8dp" />

                </LinearLayout>

                <!-- BotÃ³n cambiar contraseÃ±a -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cambiar ContraseÃ±a"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#9C27B0"
                    app:cornerRadius="28dp"
                    app:elevation="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Link para cancelar -->
        <TextView
            android:id="@+id/tvCancelReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>

