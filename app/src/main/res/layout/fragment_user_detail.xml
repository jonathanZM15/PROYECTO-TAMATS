<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_gradient_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_details_title"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Blanca con Información del Usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@android:color/white">

                    <!-- Avatar y Información Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvUserDetailAvatar"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            tools:text="AG" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvUserDetailName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                tools:text="Ana García" />

                            <TextView
                                android:id="@+id/tvUserDetailEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/admin_text_secondary"
                                android:layout_marginTop="4dp"
                                tools:text="ana.garcia@email.com" />

                            <TextView
                                android:id="@+id/tvUserDetailStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/badge_active"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="8dp"
                                tools:text="Activo" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/admin_divider"
                        android:layout_marginBottom="16dp" />

                    <!-- Información del Usuario -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_information"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvUserDetailJoinDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/admin_text_secondary"
                        android:layout_marginBottom="8dp"
                        tools:text="Registro: 15/01/2024" />

                    <TextView
                        android:id="@+id/tvUserDetailLastLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/admin_text_secondary"
                        android:layout_marginBottom="8dp"
                        tools:text="Último acceso: Hoy 14:30" />

                    <TextView
                        android:id="@+id/tvUserDetailPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/admin_text_secondary"
                        android:layout_marginBottom="16dp"
                        tools:text="Publicaciones: 25" />

                    <!-- Suspensión Info si aplica -->
                    <LinearLayout
                        android:id="@+id/suspensionContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/admin_warning_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tvSuspensionInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/admin_warning_text"
                            tools:text="⏰ Suspendido hasta: 25/03/2024\nDías restantes: 5" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botones de Acciones -->
            <LinearLayout
                android:id="@+id/actionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBlockUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_block_user"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/admin_action_block"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSuspendUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_suspend_user"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/admin_action_suspend"
                    android:layout_marginBottom="8dp" />

                <!-- Moved delete button inside actions container to keep layout compact -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteUser"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:text="@string/admin_delete_user"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/admin_danger"
                    android:elevation="12dp"
                    android:translationZ="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:contentDescription="@string/admin_delete_user_desc"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@android:color/white"
                    app:iconSize="32dp"
                    app:iconGravity="textStart"
                    app:iconPadding="18dp"
                    app:strokeWidth="3dp"
                    app:strokeColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:rippleColor="#66FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
