<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingBottom="100dp"
    android:background="@drawable/splash_gradient_background">

    <!-- Título -->
    <TextView
        android:id="@+id/tvCreateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crea una Historia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Contenedor principal con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Card con información del usuario y texto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header usuario -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/ivUserAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerCrop"
                            android:contentDescription="Avatar del usuario"
                            android:background="@drawable/circle_background" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Usuario"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- EditText para el texto (opcional) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/etPostText"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="¿Qué estás pensando? (opcional)"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:padding="16dp"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Botones para elegir foto o tomar foto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPickGallery"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Galería"
                            app:cornerRadius="24dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTakePhoto"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Cámara"
                            app:cornerRadius="24dp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Grid de fotos -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#F0EAFB">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPhotos"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:overScrollMode="never" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Botón Publicar como overlay -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPublish"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="PUBLICAR"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="32dp"
        android:background="@drawable/btn_publish_gradient"
        android:elevation="12dp" />

</LinearLayout>
